<div class="container">
  <h1 class="title">Flagged Questions</h1>
  <table
    class="table is-bordered is-striped is-hoverable is-fullwidth is-mobile-custom"
  >
    <thead>
      <tr>
        <th class="has-text-centered">Question</th>
        <th class="has-text-centered">Answer</th>
        <th class="has-text-centered">Action</th>
      </tr>
    </thead>
    <tbody>
      <% questions.forEach(function(question, index) { %>
      <tr>
        <td id="questions-question">
          #<%= index +1 %> -- <%= question.question %>
        </td>
        <td id="questions-answer"><%= question.answer %></td>
        <td id="questions-action">
          <div class="action-btn-group">
            <a
              href="/modify-questions/<%= question._id %>/edit"
              class="control-button"
              >Edit</a
            >

            <form
              action="/admin/unflag-question/<%= question._id %>"
              method="POST"
            >
              <button class="control-button">Unflag</button>
            </form>
          </div>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
