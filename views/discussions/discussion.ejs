<div class="container mt-4">
  <div class="card">
    <div class="card-content">
      <h1 class="title"><%= discussion.title %></h1>
      <p class="subtitle is-6">
        Created by <%= discussion.user.username %> on <%=
        discussion.createdAt.toLocaleString() %>
      </p>
      <div class="content"><%= discussion.content %></div>
      <% if (user && user._id.toString() === discussion.user._id.toString()) {
      %>
      <form action="/discussions/<%= discussion._id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE" />
        <button type="submit" class="button is-danger">Delete Thread</button>
      </form>
      <% } %>
    </div>
  </div>

  <div class="comments mt-4">
    <h2 class="subtitle">Comments</h2>
    <% discussion.comments.forEach(function(comment) { %>
    <div class="box">
      <p><%= comment.content %></p>
      <p class="is-size-7 has-text-grey">
        Posted by <%= comment.user.username %> on <%=
        comment.createdAt.toLocaleString() %>
      </p>
    </div>
    <% }); %>
  </div>

  <% if (user) { %>
  <div class="add-comment-form box mt-4">
    <h2 class="subtitle">Add Comment</h2>
    <form action="/discussions/<%= discussion._id %>/comments" method="POST">
      <div class="field">
        <label for="content" class="label">Comment</label>
        <div class="control">
          <textarea
            id="content"
            name="content"
            class="textarea"
            required
          ></textarea>
        </div>
      </div>
      <div class="control">
        <button type="submit" class="button is-link">Post Comment</button>
      </div>
    </form>
  </div>
  <% } %>
</div>
