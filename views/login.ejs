<%- include('./partials/header', {title: 'Login'}) %>
<section class="hero is-fullheight is-primary">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5">
          <div class="box">
            <h1 class="title is-1 has-text-centered has-text-black">Login</h1>
            <form action="/login" method="post">
              <div class="field">
                <label for="username" class="label">Username:</label>
                <div class="control">
                  <input
                    type="text"
                    id="username"
                    name="username"
                    required
                    class="input"
                  />
                </div>
              </div>
              <div class="field">
                <label for="password" class="label">Password:</label>
                <div class="control">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    required
                    class="input"
                  />
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <button type="submit" class="button is-primary is-fullwidth">
                    Login
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('./partials/footer') %>
