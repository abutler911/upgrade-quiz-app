<%- include('../partials/header', {title: 'Create Question', styles:
'../css/addquestion.css'}) %>

<div
  class="toast"
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  data-delay="5000"
>
  <div class="toast-header">
    <strong class="mr-auto">Success</strong>
    <button
      type="button"
      class="ml-2 mb-1 close"
      data-dismiss="toast"
      aria-label="Close"
    >
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">Question created successfully.</div>
</div>

<div class="container my-5">
  <h1 class="text-center">Create Question</h1>
  <hr />

  <form
    id="create-question-form"
    method="post"
    enctype="multipart/form-data"
    action="/questions/create"
  >
    <div class="form-group">
      <label for="question">Question:</label>
      <input
        type="text"
        id="question"
        name="question"
        class="form-control"
        required
      />
    </div>

    <div class="form-group">
      <label for="category">Category:</label>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="category1"
          name="category"
          value="limitations"
        />
        <label class="form-check-label" for="category1"> Limitations </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="category2"
          name="category"
          value="deice"
        />
        <label class="form-check-label" for="category2"> Deice </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="category3"
          name="category"
          value="human-factors"
        />
        <label class="form-check-label" for="category3"> Human Factors </label>
      </div>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          id="category4"
          name="category"
          value="memory-items"
        />
        <label class="form-check-label" for="category4"> Memory Items </label>
      </div>
    </div>

    <div class="form-group">
      <label for="answer">Answer:</label>
      <input
        type="text"
        id="answer"
        name="answer"
        class="form-control"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Create Question</button>
  </form>
</div>
<script src="../js/createQuestion.js"></script>
<%- include('../partials/footer') %>
