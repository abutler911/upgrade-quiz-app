<%- include('../partials/header', {title: 'Add Question', styles: '../css/addquestion.css'}) %>
<div class="container my-5">
    <h1 class="text-center">Add A Question</h1>
    <hr>
    <form id="add-question-form" method="post">
      <label for="question">Question:</label>
      <input type="text" id="question" name="question" required />
      <label for="category">Category:</label>
      <select id="category" name="category">
        <option value="limitations">Limitations</option>
        <option value="deice">Deice</option>
        <option value="human-factors">Human Factors</option>
        <option value="Memory Items">Memory Items</option>
      </select>
      <label for="answer">Answer:</label>
      <input type="text" id="answer" name="answer" required />
      <button type="submit">Create</button>
      
    </form>
</div>
<%- include('../partials/footer', {styles: '../css/addquestion.css'}) %>
<script src="/js/createQuestion.js"></script>
</body>
</html>
