<%- include('../partials/header', {title: 'Edit Questions'}) %>

<h1>Edit Question</h1>
<form action="/modify-questions/<%= question._id %>/edit" method="post">
  <div>
    <label for="question">Question:</label>
    <input
      type="text"
      id="question"
      name="question"
      value="<%= question.question %>"
    />
  </div>
  <div>
    <label>Category:</label>
    <% categories.forEach(function(category) { %>
    <div>
      <input type="checkbox" id="<%= category %>" name="categories" value="<%=
      category %>" <%= questionCategories.includes(category) ? 'checked' : ''
      %>>
      <label for="<%= category %>"><%= category %></label>
    </div>
    <% }); %>
  </div>

  <div>
    <label for="answer">Answer:</label>
    <input
      type="text"
      id="answer"
      name="answer"
      value="<%= question.answer %>"
    />
  </div>
  <button type="submit">Save Changes</button>
  <a href="/">Back</a>
</form>

<%- include('../partials/footer') %>
