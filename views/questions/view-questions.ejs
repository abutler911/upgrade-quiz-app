<%- include('../partials/header', {title: 'All Questions'}) %>
<div class="dark-overlay"></div>
<div class="container mt-5 main-content">
  <div class="row justify-content-center align-items-center">
    <div class="col-12 text-center">
      <h1 class="display-1 mt-5">All Questions</h1>
      <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="text-center">Question</th>
              <th class="text-center">Category</th>
              <th class="text-center">Answer</th>
            </tr>
          </thead>

          <tbody>
            <% questions.forEach(function(question) { %>
            <tr>
              <td id="questions-question"><%= question.question %></td>
              <td id="questions-category"><%= question.category %></td>
              <td id="questions-answer"><%= question.answer %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
  crossorigin="anonymous"
></script>
</body>
</html>
